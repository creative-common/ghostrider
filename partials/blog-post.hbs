     <!-- Blog Post -->
	<div class="col-md-4">
	<div onclick="location.href='{{url}}'"  class="card equal mb-4">
          <img class="card-img-top img-responsive" 
                     src="{{img_url feature_image size="m"}}"
                    alt="{{title}}">

          <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">{{excerpt words="25"}}</p>
          </div>
          <div class="card-footer text-muted">
            Posted on {{date published_at format="MMMM DD, YYYY"}} by
            <a href="{{url}}">{{author}}</a>
          </div>
        </div>
	</div>
